---
import strapiFetch from "../../lib/strapi-fetch";
import type { Cat } from "../../interfaces/Cat"; 
import type { ContentSection } from "../../interfaces/ContentSection";
import Layout from "../../layouts/Layout.astro";
import CatCard from "../../components/CatCard/CatCard.astro";
import qs from "qs";

const cats: Cat[] = await strapiFetch<Cat[]>({
  endpoint: "cats", // the content type to fetch
  wrappedByKey: "data", // the key to unwrap the response
  query: qs.stringify(
    { 
      // filters: {
      //   name: 
      //     {
      //       $eq: "Antoher"
      //     }
      // },
      sort: "name:asc",
      fields: ["name", "description", "adopted", "gender", "age", "robe"],
      populate: {
        tags: {
          fields: ["name", "type"],
        },
        photos: {
          fields: ["url"],
        },
        socialSkills: "*", // fetch all fields,
        sicknesses: {
          fields: ["name", "link"]
        },
      },
    },
    {
      encodeValuesOnly: true, // prettify URL
    }
  ),
});

const article: ContentSection = await strapiFetch({
  endpoint: "adoption-page", // the content type to fetch
  wrappedByKey: "data", // the key to unwrap the response
});

const pageTitle = "Nos Chats Ã  l'adoption";

console.log(article);

---

<Layout title={pageTitle}>
  <div class="flex flex-col w-full">
    <h1 class="bg-secondary text-3xl font-bold mx-auto my-6 color-pageTitle">{pageTitle}</h1>
    <!-- Content section above card browser -->
    <div class="bg-tertiary flex items-center justify-center mx-8 mb-4 rounded-3xl p-3 ">
      <div set:html={article.content} class="text-[22px]"></div>
    </div>
    <!-- Cat card browser -->
    <div class="flex flex-wrap justify-center gap-16">
      {cats.map((cat) => <CatCard cat={cat} />)}
    </div>
  </div>
</Layout>
