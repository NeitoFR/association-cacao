---
import type { Cat } from "../../interfaces/Cat";
import CatPhotoSweeper from "../../components/PhotoSweeper/PhotoSweeper";
import Layout from "../../layouts/Layout.astro";
import strapiFetch from "../../lib/strapi-fetch";
import qs from "qs";
import Accordion from "../../components/Accordion/Accordion";
import CatSocialDetails from "../../components/CatSocialDetails/CatSocialDetails.astro";

const { catIdentifier } = Astro.params;

const cat = await strapiFetch<Cat>({
  endpoint: "cats/" + catIdentifier,
  wrappedByKey: "data",
  query: qs.stringify({
    fields: [
      "name",
      "adopted",
      "gender",
      "age",
      "robe",
      "species",
      "history",
      "fosterfamilyword",
      "sicknessandcare",
      "temperandneed",
    ],
    populate: {
      tags: {
        fields: ["name", "type"],
      },
      photos: {
        fields: ["url"],
      },
      socialSkills: "*", // fetch all fields,
      sicknesses: {
        fields: ["name", "link"],
      },
    },
  }),
});

const pageTitle = "A propos de " + cat.name;
---

<Layout title={pageTitle}>
  <div class="flex flex-col w-full lg:max-w-[1200px] mx-auto">
    <!-- Page Header -->
    <div class="bg-secondary text-white py-4 px-6 rounded-b-lg shadow-md mb-6">
      <h1 class="text-3xl font-bold text-center">Nos chats à l'adoption</h1>
    </div>

    <!-- Cat Profile Container -->
    <div class="px-4 md:px-8 mb-12">
      <!-- Cat Name Header -->
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-1 bg-catCardBorder rounded-full mr-4 hidden md:block"></div>
        <h1 class="text-3xl md:text-4xl font-bold font-dmDisplay text-center">{cat.name}</h1>
        <div class="w-16 h-1 bg-catCardBorder rounded-full ml-4 hidden md:block"></div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column - Photo Gallery -->
        <div class="lg:col-span-2">
          {
            cat.photos && cat.photos[0] && (
              <CatPhotoSweeper
                photos={cat.photos}
                className="rounded-2xl border-[3px] border-white shadow-lg h-[350px] sm:h-[450px] md:h-[500px] w-full object-cover"
                client:load
              />
            )
          }
        </div>

        <!-- Right Column - Info Cards -->
        <div class="flex flex-col gap-4">
          <!-- General Info Card -->
          <div class="bg-white rounded-2xl p-5 shadow-md">
            <h3 class="text-xl md:text-2xl font-bold text-center mb-4 text-secondary">
              INFORMATIONS GÉNÉRALES
            </h3>
            <div class="grid grid-cols-2 gap-3">
              <div class="flex items-center gap-2 p-2 bg-primary/30 rounded-lg">
                <img src="/icons/paw.png" alt="Genre" class="size-6" />
                <p class="font-medium">{cat.gender}</p>
              </div>
              <div class="flex items-center gap-2 p-2 bg-primary/30 rounded-lg">
                <img src="/icons/paw.png" alt="Robe" class="size-6" />
                <p class="font-medium">{cat.robe}</p>
              </div>
              <div class="flex items-center gap-2 p-2 bg-primary/30 rounded-lg">
                <img src="/icons/paw.png" alt="Espèce" class="size-6" />
                <p class="font-medium">{cat.species || "Non spécifié"}</p>
              </div>
              <div class="flex items-center gap-2 p-2 bg-primary/30 rounded-lg">
                <img src="/icons/paw.png" alt="Âge" class="size-6" />
                <p class="font-medium">{cat.age} mois</p>
              </div>
            </div>
          </div>

          <!-- Social Skills Card -->
          <div class="bg-white rounded-2xl p-5 shadow-md">
            <h3 class="text-xl md:text-2xl font-bold text-center mb-4 text-secondary">
              COMPATIBILITÉ
            </h3>
            <div class="flex flex-col space-y-3 items-center">
              <div class="flex items-center gap-3 p-2 bg-primary/30 rounded-lg w-full">
                <img 
                  src={"/icons/" + (cat.socialSkills.isCatFriendly === "yes" ? "check_yes.png" : 
                                   cat.socialSkills.isCatFriendly === "no" ? "cross_no.png" : "question_mark.png")} 
                  alt="Compatibilité chats" 
                  class="size-6" 
                />
                <span class="font-medium">Chats</span>
              </div>
              <div class="flex items-center gap-3 p-2 bg-primary/30 rounded-lg w-full">
                <img 
                  src={"/icons/" + (cat.socialSkills.isDogFriendly === "yes" ? "check_yes.png" : 
                                   cat.socialSkills.isDogFriendly === "no" ? "cross_no.png" : "question_mark.png")} 
                  alt="Compatibilité chiens" 
                  class="size-6" 
                />
                <span class="font-medium">Chiens</span>
              </div>
              <div class="flex items-center gap-3 p-2 bg-primary/30 rounded-lg w-full">
                <img 
                  src={"/icons/" + (cat.socialSkills.isChildrenFriendly === "yes" ? "check_yes.png" : 
                                   cat.socialSkills.isChildrenFriendly === "no" ? "cross_no.png" : "question_mark.png")} 
                  alt="Compatibilité enfants" 
                  class="size-6" 
                />
                <span class="font-medium">Enfants</span>
              </div>
            </div>
          </div>

          <!-- Adoption Button -->
          <a href="#contact-adoption" class="bg-donate text-white text-lg font-bold py-4 px-6 rounded-xl shadow-md hover:bg-donate/90 transition-colors duration-300 text-center mt-2">
            Adopter {cat.name}
          </a>
        </div>
      </div>

      <!-- Accordion Sections -->
      <div class="mt-8 grid grid-cols-1 gap-6">
        <Accordion
          title="HISTOIRE ET PARCOURS"
          content={cat.history}
          className="w-full bg-white shadow-md"
          client:load
        />
        <Accordion
          title="CARACTÈRE ET BESOINS"
          content={cat.temperandneed}
          className="w-full bg-white shadow-md"
          client:load
        />
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <Accordion
            title="MOT DE LA FAMILLE D'ACCUEIL"
            content={cat.fosterfamilyword}
            className="w-full bg-white shadow-md italic"
            client:load
          />
          <Accordion
            title="MALADIES ET SOINS"
            content={cat.sicknessandcare
              ? cat.sicknessandcare
              : "Pas de maladies déclarées ou de soins particuliers à administrer."}
            className="w-full bg-white shadow-md"
            client:load
          />
        </div>
      </div>

      <!-- Contact Section -->
      <div id="contact-adoption" class="mt-12 bg-white rounded-2xl p-6 shadow-md">
        <h2 class="text-2xl md:text-3xl font-bold text-center mb-6 text-secondary">Comment adopter {cat.name} ?</h2>
        <p class="text-center mb-6">
          Pour adopter {cat.name}, veuillez nous contacter par email ou par téléphone. 
          Nous vous guiderons à travers le processus d'adoption.
        </p>
        <div class="flex flex-col md:flex-row justify-center gap-4">
          <a href="mailto:contact@association-cacao.fr" class="bg-secondary text-white py-3 px-6 rounded-lg text-center hover:bg-secondary/90 transition-colors duration-300">
            Nous contacter par email
          </a>
          <a href="tel:+33123456789" class="bg-catCardBorder text-white py-3 px-6 rounded-lg text-center hover:bg-catCardBorder/90 transition-colors duration-300">
            Nous appeler
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
