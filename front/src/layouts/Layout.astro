  background-position: center;
  transition: background-image 0.5s ease; /* Smooth fade-in for background */
}

.loading {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: white;
  background-color: #ccc; /* Placeholder background */
