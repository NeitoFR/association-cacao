---
import Navbar from "../components/Navbar/Navbar.tsx";
import Footer from "../components/Footer.astro";
import strapiFetch from "../lib/strapi-fetch";
import qs from "qs";
import type { NavbarTab } from "../interfaces/NavbarTabs";

interface Props {
  title: string;
}

const { title } = Astro.props;

const navbarTabs: NavbarTab[] = await strapiFetch({
  endpoint: "navbar-tabs",
  wrappedByKey: "data",
  query: qs.stringify(
    { 
      // filters: {
      //   name: {
      //     $eq: "Accueil"
      //   }
      // },
      sort: ["order"],
      populate: {
        tabs: {
          populate: {
            icon: {
              fields: ["url"],
            },
          },
        },
        icon: {
          fields: ["url"],
        },
      },
    },
    {
      encodeValuesOnly: true, // prettify URL
    }
  ),
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-orange-100">
    <Navbar tabs={navbarTabs} client:load />
    <main class="flex-grow flex">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  .custom-scrollbar-x,
  .custom-scrollbar-y {
    overflow: hidden;
  }
  .custom-scrollbar-x {
    overflow-x: auto;
  }
  .custom-scrollbar-y {
    overflow-y: auto;
  }
  ::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }
  ::-webkit-scrollbar-thumb {
    background: rgb(241, 165, 99);
    border-radius: 10px;
  }
  ::-webkit-scrollbar-track {
    /* background-color: rgb(253 186 116 / var(--tw-bg-opacity)); */
  }
  ::-webkit-scrollbar-button {
    width: 0px;
    height: 0px;
  }

 .image-container {
  position: relative;
  width: 90%;
  height: 400px; /* Adjust height as needed */
  background-size: cover;
  background-position: center;
  transition: background-image 0.5s ease; /* Smooth fade-in for background */
