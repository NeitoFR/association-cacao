---
const { href, name } = Astro.props;
---

<div class="mx-4">
  <a href={href} class="inline-block">
    {name}
  </a>
</div>

<style>
  a:after {
    top: 100%;
    left: 0%;
    width: 0;
    height: 2px;
    background: rgb(var(--accent));
    display: block;
    content: "";
  }

  a:hover:after {
    animation: linkAnimation 300ms ease-in-out;
    width: 100%;
  }

  @keyframes linkAnimation {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }
</style>
