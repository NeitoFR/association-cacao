---
import NavbarLink from "../components/NavbarLink.astro";

const tabs = [
  { name: "Accueil", href: "/" },
  { name: "Nos Chats", href: "/nos-chats" },
];
---

<nav
  class="h-20 bg-orange-300 flex justify-center items-center space-x-10 text-xl relative"
>
  <img
    src="https://dev.strapi.neitosden.fr/uploads/Logo_d_811c852867.png"
    alt="Logo Association Cacao"
    class="h-14 w-14 absolute left-24"
  />
  {tabs.map((tab) => <NavbarLink href={tab.href} name={tab.name} />)}
  <button
    class="flex items-center justify-center flex-row absolute right-24 bg-orange-400 px-4 py-2 rounded hover:bg-orange-500
    active:bg-orange-600"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-6 mr-2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
      ></path>
    </svg>
    Nous supporter</button
  >
</nav>
